            <ListBoxItem Content="Yecla"/>
            <ListBoxItem Content="Calasparra"/>
        </ListBox>
        <ComboBox x:Name="cbPueblos" HorizontalAlignment="Left" Margin="518,294,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False">
