        <ListBox x:Name="lbAlien" Margin="461,100,223,143" SelectionChanged="lbSelectionChanged"/>
        <ListBox x:Name="lbDistribuidor" Margin="627,100,60,143" SelectionChanged="lbSelectionChanged"/>
