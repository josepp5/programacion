        <Button x:Name="btnGenerarPDF" Content="Generar PDF" HorizontalAlignment="Left" Margin="302,64,0,0" VerticalAlignment="Top" Click="btnGenerarPDF_Click"/>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="598,319,0,0" VerticalAlignment="Top" Click="btnEliminar_Click"/>
        <ListBox x:Name="lbPersonas" Margin="302,100,382,143" SelectionChanged="lbSelectionChanged"/>
        <TextBox x:Name="txtApellido" HorizontalAlignment="Left" Margin="73,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Apellido" HorizontalAlignment="Left" Margin="73,133,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
