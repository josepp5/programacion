        <Label Content="Nombre" HorizontalAlignment="Left" Margin="73,79,0,0" VerticalAlignment="Top"/>
        <Label Content="Tipo" HorizontalAlignment="Left" Margin="73,183,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.556,2.236"/>
