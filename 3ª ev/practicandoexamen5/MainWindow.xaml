        <ComboBox x:Name="cbCliente" HorizontalAlignment="Left" Margin="73,217,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Persona"/>
            <ComboBoxItem Content="Alien"/>
